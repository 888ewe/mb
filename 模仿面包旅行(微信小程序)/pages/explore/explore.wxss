/* pages/explore/explore.wxss */
.content .item{
    margin: 20rpx;
    margin-top: 50rpx;
} 

.content .item .title{
    font-size: 25px;
}
.content .item .list{
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-between;

}
.content .item .list .list_item{
    position: relative;
    margin-top: 15px;
}
.content .item .list .list_item image{ 
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 8rpx;
  
}

.mask{
  width: 100%;
  height: 80rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background-image: linear-gradient(to top, rgba(0,0,0,.8), rgba(0,0,0,0));
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}


.content .item .list .list_item text{ 
    position: absolute;
    bottom: 20rpx;
    left: 20rpx;
    color: white;
    font-size: 25px;
    font-weight: bold;
}



